{
  "name": "filehound",
  "version": "1.17.3",
  "description": "Find files the easy way",
  "main": "index.js",
  "scripts": {
    "jsdoc": "jsdoc -c ./docconfig/jsdoc.json",
    "lint": "eslint ./src ./test",
    "coverage": "node_modules/.bin/babel-node node_modules/.bin/babel-istanbul cover node_modules/.bin/_mocha -- -R dot",
    "compile": "babel --presets es2015,stage-2 -d lib/ src/",
    "clean": "rm lib/*",
    "prepublish": "npm run compile",
    "test": "npm run compile && mocha --compilers js:babel-core/register"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nspragg/filehound.git"
  },
  "keywords": [
    "file",
    "recursive",
    "search",
    "filehound",
    "file",
    "hound",
    "lister",
    "find",
    "directory",
    "walk",
    "walker",
    "promise",
    "finder",
    "fs"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nspragg/filehound/issues"
  },
  "homepage": "https://github.com/nspragg/filehound",
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.24.0",
    "babel-istanbul": "^0.12.2",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-2": "^6.11.0",
    "babel-register": "^6.11.6",
    "coveralls": "^3.0.0",
    "eslint": "^4.18.2",
    "istanbul": "^0.4.4",
    "jsdoc": "^3.4.3",
    "mocha": "^5.1.1",
    "sinon": "^5.0.2"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "quotes": [
        2,
        "single"
      ],
      "eqeqeq": 2,
      "no-var": 2,
      "one-var": [
        2,
        "never"
      ],
      "prefer-const": 2,
      "semi": 2,
      "strict": [
        2,
        "global"
      ],
      "arrow-parens": 2,
      "prefer-arrow-callback": 2
    }
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "file-js": "0.3.0",
    "lodash": "^4.17.10",
    "minimatch": "^3.0.4",
    "moment": "^2.22.1",
    "unit-compare": "^1.0.1"
  }
}
